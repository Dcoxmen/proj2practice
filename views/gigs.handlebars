<section id="gigs" class="container">
    <h1>All Gigs</h1>

    {{#each gigs}}
    <div class="gig">
        <h3>{{title}}</h3>
        <p>{{description}}</p>
        <ul>
            <li>Budget: {{budget}}</li>
            <li><a href="mailto:{{contact_email}}" class="btn btn-reverse">Contact</a></li>
            <li>Gear needed: <span>{{technologies}}</span></li>
            <li>Venue: <span class="venue">{{venue}}</span></li>
            <li><span class="venueaddress">Venue Address: <span>{{venueaddress}}</span></span></li>
        </ul>

        <button data-id="{{this.id}}" class="delquote">Delete</button>

    </div>
    {{else}}
    <p>No gigs available</p>
    {{/each}}

</section>